<section class="parallax text-center">
    <img src="/assets/images/pizza_icon.ico">
</section>


<main>
    <section>
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Add a Pizza!</h2>
                </div>
                    <form class="create-update-form" action="/" method="POST">
                        <div class="form-group text-center">
                            <label for="bn">Pizza Name</label>
                            <input type="text" id="bn" name="name" class="drawn-border">
                            <button class="add-pizza" type="submit">Add Pizza</button>
                        </div>
                    </form>
                </div>
            </div>

        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Available Pizzas</h2>
                </div>
                    <ul>
                        {{#each pizzas}} {{#unless this.devoured}}
                        <li>
                            {{this.name}}
                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="false">
                                <button type="submit">Devour It!</button>
                            </form>
                        </li>
                        {{/unless}} {{/each}}
                    </ul>
                </div>
            </div>

        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Devoured Pizzas</h2>
                </div>
                    <ul>
                        {{#each pizzas}} {{#if this.devoured}}
                        <li>
                            {{this.name}}
                        </li>
                        {{/if}} {{/each}}
                    </ul>
                </div>
            </div>
    </section>
</main>